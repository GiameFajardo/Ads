<Window x:Class="SlideShow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlideShow"
        xmlns:pages="clr-namespace:SlideShow.Pages"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        KeyDown="Window_KeyDown" TextInput="Window_TextInput"
        >
    <Window.Resources>
        <ResourceDictionary Source="/Styles/ImagesStyles.xaml"/>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="{StaticResource cloud2}" Stretch="Uniform" 
                    TileMode="FlipY"  AlignmentY="Top" Viewport="0,0,220,220" ViewportUnits="Absolute" />
    </Window.Background>
    <Grid>
        
        <TextBox x:Name="txtSearch" Visibility="Collapsed" 
                 PreviewTextInput="TxtSearch_PreviewTextInput"
                 HorizontalAlignment="Left" Height="23" Margin="211,277,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <!--<ContentControl x:Name="Container" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>-->

    </Grid>
</Window>
