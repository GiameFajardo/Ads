<local:BasePage x:Class="SlideShow.Pages.MessagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SlideShow.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MessagePage"
      DataContext="{RelativeSource Self}">

    <Grid>
        <TextBlock x:Name="txtMessage" 
                   HorizontalAlignment="Stretch" TextAlignment="Center" 
                   VerticalAlignment="Center" TextWrapping="Wrap" FontSize="30"
                   Text="{Binding Path=Message, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>

    </Grid>
</local:BasePage>
