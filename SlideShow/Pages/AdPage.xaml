<local:BasePage x:Class="SlideShow.Pages.AdPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SlideShow.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="Red"
      Title="ImagePage">

    <Grid>
        <MediaElement x:Name="mediaContent"
            HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" 
            BufferingEnded="mediaContent_BufferingEnded"
            BufferingStarted="mediaContent_BufferingStarted"  
            TouchDown="mediaContent_TouchDown" 
            TouchUp="mediaContent_TouchUp"    
            MouseDown="mediaContent_MouseDown"  
            MediaEnded="mediaContent_MediaEnded"
            MediaFailed="mediaContent_MediaFailed"          />

    </Grid>
</local:BasePage>
